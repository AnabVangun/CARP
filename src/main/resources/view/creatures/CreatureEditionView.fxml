<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox fx:id="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.creatures.CreatureEditionView">
   <children>
      <ListView fx:id="phaseBar" orientation="HORIZONTAL" prefHeight="200.0" prefWidth="200.0" />
      <TextFlow>
         <children>
            <Text fx:id="phaseDescription" strokeType="OUTSIDE" strokeWidth="0.0" text="Description of the phase" />
         </children>
      </TextFlow>
      <HBox fx:id="methodChoiceContainer">
         <children>
            <ListView fx:id="methodChoice" prefHeight="200.0" prefWidth="200.0" />
            <TextFlow prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Text fx:id="methodDescription" strokeType="OUTSIDE" strokeWidth="0.0" text="Description of the method" />
               </children>
            </TextFlow>
         </children>
      </HBox>
   </children>
</VBox>
